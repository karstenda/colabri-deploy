# Example environment configuration for Colabri deployment
# Copy this file and customize for your environment
# DO NOT commit actual .env files to version control

# GCP Configuration
GCP_PROJECT_ID=my-gcp-project
GCP_REGION=us-central1
GKE_CLUSTER_NAME=colabri-cluster
GKE_MACHINE_TYPE=e2-medium
GKE_NUM_NODES=3

# Application Configuration
APP_ENVIRONMENT=production
LOG_LEVEL=info
PORT=8080

# Container Image
CONTAINER_REGISTRY=gcr.io
IMAGE_NAME=colabri-app
IMAGE_TAG=latest

# Domain Configuration (for Ingress)
DOMAIN_NAME=colabri.example.com
TLS_SECRET_NAME=colabri-tls-cert

# Database Configuration (example)
# These should be stored as Kubernetes Secrets, not environment files
# DB_HOST=postgres-service
# DB_PORT=5432
# DB_NAME=colabri_db
# DB_USER=colabri_user
# DB_PASSWORD=<use-kubernetes-secret>

# API Keys (example)
# These should be stored as Kubernetes Secrets
# API_KEY=<use-kubernetes-secret>
# JWT_SECRET=<use-kubernetes-secret>
